<style>
    .card {
  width: 300px;
  padding: 20px;
  box-shadow: 0px 0px 10px 0px grey;
  margin: 20px;
}

.card-header {
  font-size: 24px;
  font-weight: bold;
  text-align: center;
  padding-bottom: 20px;
  border-bottom: 1px solid lightgrey;
}

.card-body {
  font-size: 18px;
  padding-top: 20px;
}

</style>
<div class="card">
    <div class="card-header">
        <%= habit.nameOfHabit %>
    </div>
    <div class="card-body">
        <p>Start Date: <%= habit.startDate %>
        </p>
        <p>Days Completed: <%= habit.done.length %>
        </p>
        <p>Days Missed: <%= habit.notDone.length %>
        </p>
    </div>
</div>